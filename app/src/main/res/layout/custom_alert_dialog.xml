<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#00000000"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/ll_dialog_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/pale_red"
                    android:gravity="center"
                    android:text="分享到朋友圈"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />

            <RelativeLayout
                android:id="@+id/rl_nine_image_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:paddingLeft="20dp"
                android:gravity="left">

                <ImageView
                    android:id="@+id/iv_nine_image_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_nine_img_share" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_nine_image_share"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nine_image_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="九图分享"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nine_image_share"
                        android:layout_marginLeft="10dp"
                        android:text="保存商品图，发送朋友圈"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey3" />

            <RelativeLayout
                android:id="@+id/rl_ordinary_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:paddingLeft="20dp"
                android:gravity="left">

                <ImageView
                    android:id="@+id/iv_ordinary_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ordinary_share" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_ordinary_share"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ordinary_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="普通链接分享"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nine_image_share"
                        android:layout_marginLeft="10dp"
                        android:text="一键转发，快速分享"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey3" />
            <TextView
                android:id="@+id/tv_else_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他方式分享"
                android:textSize="@dimen/text_size_16"
                android:gravity="center"
                android:textColor="@color/blue2"
                android:layout_marginBottom="15dp"
                android:paddingTop="15dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_close_dialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_window_close" />
</RelativeLayout>