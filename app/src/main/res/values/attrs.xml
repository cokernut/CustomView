<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="bgColor" format="color" />
    <attr name="lineSize" format="dimension" />
    <attr name="lineColor" format="color" />

    <declare-styleable name="CellView">
        <attr name="lineSize"/>
        <attr name="amountColor" format="color" />
        <attr name="lineColor" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="lineColor"/>
        <attr name="lineSize"/>
    </declare-styleable>

    <declare-styleable name="SimpleProgressView">
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="WaterDropView">
        <attr name="WaterColor" format="color" />
    </declare-styleable>

    <declare-styleable name="WifiView">
        <attr name="wifiColor" format="color" />
    </declare-styleable>
</resources>