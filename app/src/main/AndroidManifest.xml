<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.cokernut.customview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HorizontalViewPagerActivity"
            android:label="@string/title_activity_horizontal_view_pager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FlowLayoutActivity"
            android:label="@string/title_activity_flow_layout"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>